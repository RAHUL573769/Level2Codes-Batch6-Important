generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int    @id @default(autoincrement())
  email       String @unique
  phoneNumber Int
  name        String
  post        Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  postName  String
  user      User?   @relation(fields: [userEmail], references: [email])
  userEmail String?
}
